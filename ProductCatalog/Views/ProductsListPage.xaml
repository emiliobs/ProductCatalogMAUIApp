<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProductCatalog.ViewModels"
             x:Name="ProductsPage"
             xmlns:models="clr-namespace:ProductCatalog.Models"
             x:Class="ProductCatalog.Views.ProductsListPage"
             xmlns:helpers="clr-namespace:ProductCatalog.Helpers"
             x:DataType="vm:ProductsListViewModel"
             Title="Product Catalog"
             BackgroundColor="#f5f7fa">

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="#6C5CE7"
                Padding="20,40,20,20">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,3"></Shadow>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto">
                <Label Text="ðŸ“¦ Products"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       Grid.Row="0" />

                <Label Grid.Row="1" Margin="0,5,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding Products.Count}"
                                  TextColor="White"
                                  FontAttributes="Bold"
                                  FontSize="16" />
                            <Span Text=" products registered"
                                  TextColor="#E0E0E0"
                                  FontSize="16" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>
        </Border>

        <!--Search Bar-->
        <Border Grid.Row="1"
                BackgroundColor="White"
                Margin="15,15,15,10"
                Padding="15,10"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"></RoundRectangle>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.05" Radius="8" Offset="0,2"></Shadow>
            </Border.Shadow>

            <Grid ColumnDefinitions="*, Auto">
                <Entry Grid.Column="0"
                       Text="{Binding SearchText}"
                       Placeholder="Search products....."
                       FontSize="16"
                       TextColor="Black"
                       BackgroundColor="Transparent"
                       ReturnCommand="{Binding SearchProductsCommand}">
                </Entry>

                <Button Grid.Column="1"
                        Text="ðŸ”"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="#6c5ce7"
                        Command="{Binding SearchProductsCommand}">
                </Button>
            </Grid>
        </Border>

        <!-- Products list -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Products}"
                        SelectionMode="None"
                        Margin="15,0">

            <CollectionView.EmptyView>
                <StackLayout Padding="50" VerticalOptions="Center">
                    <Label Text="ðŸ“¦"
                           FontSize="80"
                           HorizontalTextAlignment="Center" />
                    <Label Text="No products"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="#2D3436" />
                    <Label Text="Press + to add your first product"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           TextColor="#636E72"
                           Margin="0,10,0,0" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <SwipeView Margin="0,0,0,12">
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Execute">
                                <SwipeItem Text="Delete"
                                     IconImageSource="delete.png"
                                     BackgroundColor="#FF6B6B"
                                      Command="{Binding BindingContext.DeleteProductCommand, Source={x:Reference ProductsPage}}"
                                     CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Border BackgroundColor="White"
                                Padding="16"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2" />
                            </Border.Shadow>

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductsListViewModel}},
                                    Path=EditProductCommand}"
                                    CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>

                            <!--Product Image-->
                            <Grid ColumnDefinitions="110,*">
                                <Border Grid.Column="0"
                                        WidthRequest="95"
                                        HeightRequest="95"
                                        BackgroundColor="#f0f0f0"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12">
                                        </RoundRectangle>
                                    </Border.StrokeShape>

                                    <Image Aspect="AspectFill"
                                        IsVisible="{Binding HasImage}">
                                        <Image.Source>
                                            <FileImageSource File="{Binding ImagePath}" />
                                        </Image.Source>
                                    </Image>

                                    <!--<Label Text="ðŸ“·"
                                         FontSize="40"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         TextColor="#BDC3C7"
                                        IsVisible="{Binding HasImage, Converter={StaticResource InverseBoolConverter}}">
                                    </Label>-->
                                </Border>

                                <VerticalStackLayout Grid.Column="1"  Spacing="6">
                                    <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#2D3436" />

                                    <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#636E72"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"
                                       IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}" />

                                    <Grid ColumnDefinitions="Auto,*">
                                        <Label Grid.Column="0"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="#27AE60">
                                            <Label.Text>
                                                <Binding Path="Price" StringFormat="${0:N2}" />
                                            </Label.Text>
                                        </Label>

                                        <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Spacing="8">
                                            <Label Text="ðŸ“¦"
                                               FontSize="14"
                                               VerticalOptions="Center">
                                            </Label>
                                            <Label Text="{Binding Stock}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#2D3436"
                                               VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </Grid>

                                    <Border Padding="8,4"
                                        BackgroundColor="#E8F4F8"
                                        HorizontalOptions="Start"
                                        StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>

                                        <Label Text="{Binding Category}"
                                           FontSize="12"
                                           TextColor="#3498DB"
                                           FontAttributes="Bold" />
                                    </Border>
                                    <HorizontalStackLayout ></HorizontalStackLayout>
                                    <!--<Button Text="ðŸ—‘ï¸ Delete"
                                        FontSize="12"
                                        BackgroundColor="#ff6b6b"
                                        TextColor="White"
                                        CornerRadius="8"
                                        Padding="8,4"
                                        HorizontalOptions="Start"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductsListViewModel}}, Path=DeleteProductCommand}"
                                        CommandParameter="{Binding .}">                                        
                                    </Button>-->
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Floating button -->
        <Border Grid.Row="2"
                WidthRequest="64"
                HeightRequest="64"
                BackgroundColor="#6C5CE7"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20,20,20,30"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="32" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="#6C5CE7" Opacity="0.4" Radius="20" Offset="0,8" />
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddProductCommand}" />
            </Border.GestureRecognizers>

            <Label Text="+"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,-4,0,0" />
        </Border>

        <!-- Loading  oVerlay-->
        <Grid Grid.Row="0" Grid.RowSpan="2"
              IsVisible="{Binding IsLoading}"
              BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="True"
                               Color="#6C5CE7"
                               WidthRequest="50"
                               HeightRequest="50" />
        </Grid>
    </Grid>
</ContentPage>